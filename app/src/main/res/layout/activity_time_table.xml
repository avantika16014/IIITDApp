<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_time_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhcs.admin.iiitdapp.TimeTableActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/tt1"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/tt1" />

            <ImageButton
                android:id="@+id/tt2"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tt1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/tt2" />

            <ImageButton
                android:id="@+id/tt3"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tt2"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/tt3" />

            <ImageButton
                android:id="@+id/tt4"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tt3"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/tt4" />

            <ImageButton
                android:id="@+id/tt5"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tt4"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/tt5" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
