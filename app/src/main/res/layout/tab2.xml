<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/button_gym"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/yogaimage"
        android:drawableBottom="@drawable/download"
        android:text=""/>


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_gym"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="Timings     8 AM-9 AM (Sun/Mon Off)"
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Fees            500/-"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Ph.               9810319099"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="11dp" />



</RelativeLayout>